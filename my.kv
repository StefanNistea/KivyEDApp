	Button:
		pos_hint: {"x": 0.775, "top": 0.875}
        text: "Paste"

        size_hint: 0.20, 0.20
        font_size: self.width * 0.2 if (self.width * 0.2) < self.height else self.height * 0.8

        on_release:
